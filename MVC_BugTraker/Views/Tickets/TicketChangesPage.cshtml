@model IEnumerable<MVC_BugTraker.Models.TickectsHistory>

@{
    ViewBag.Title = "TicketChangesPage";
}
<div id="content">

    <div id="content-header">
        <div id="breadcrumb"> <a href="~/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a></div>
    </div>
    <div class="container-fluid">
        <h2>Index</h2>
        @using (Html.BeginForm())
        {
            <table id="mytable" class="table table-striped table-bordered" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TicketsId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Property)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OldValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NewValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Changed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UsersId)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.Tickets.Title)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.Property)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.OldValue)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.NewValue)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.Changed)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.Users.DisplayName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        </div>
</div>

@section Scripts {

    <script>
        $('#mytable').DataTable();
    </script>


}