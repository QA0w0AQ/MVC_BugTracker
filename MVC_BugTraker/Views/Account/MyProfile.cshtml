@model MVC_BugTraker.Models.MyProfileViewModel
@{
    ViewBag.Title = "MyProfile";
}

<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="~/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a></div>
    </div>
    <div class="container-fluid">
        <h2>MyProfile</h2>
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"> <i class="icon-align-justify"></i> </span>
                <h5>Personal-info</h5>
            </div>
            <div class="widget-content nopadding">
                <form action="#" method="get" class="form-horizontal">
                    <div class="control-group">
                        <label class="control-label">Email :</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email-address" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">DisplyName :</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.DisplyName, new { placeholder = "User-name" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Birth :</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Birth, new { placeholder = "Enter Password" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Company info :</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.CompanyInfo, new { placeholder = "Company name" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Description field:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Description)
                            <span class="help-block">Description field</span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Message :</label>
                        <div class="controls">
                            <textarea class="span6"></textarea>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
