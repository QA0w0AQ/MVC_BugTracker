@model MVC_BugTraker.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <title>Matrix Admin</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/matrix-login.css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div id="loginbox">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="control-group normal_text"> <h3><img src="~/Image/logo.png" alt="Logo" /></h3></div>
            <div class="control-group" style="padding:10px">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lg"><i class="icon-user"> </i></span>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "E-mail address" })<br>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-warning" })
                    </div>
                </div>
            </div>
            <div class="control-group" style="padding:10px">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_ly"><i class="icon-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })<br>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-warning" })
                    </div>
                </div>
            </div>
            <div class="control-group" style="padding:10px">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_ly"><i class="icon-lock"></i></span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "ConfirmPassword" })<br>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-warning" })
                    </div>
                </div>
            </div>
            <div class="control-group" style="padding:10px">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lb"><i class="icon-pencil"></i></span>
                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "FirstName" })<br>
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-warning" })
                    </div>
                </div>
            </div>
            <div class="control-group" style="padding:10px">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lb"><i class="icon-pencil"></i></span>
                        @Html.TextBoxFor(m => m.LastName, new { placeholder = "LastName" })<br>
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-warning" })
                    </div>
                </div>
            </div>
            <div class="control-group" style="padding:10px">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lb"><i class="icon-pencil"></i></span>
                        @Html.TextBoxFor(m => m.DisplyName, new { placeholder = "DisplyName" })<br>
                        @Html.ValidationMessageFor(m => m.DisplyName, "", new { @class = "text-warning" })
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <span class="pull-right"><input type="submit" class="btn btn-success" value="Register"/></span>
            </div>
        }
    </div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/matrix.login.js"></script>

</body>

</html>


